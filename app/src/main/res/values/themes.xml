<resources>
    <!-- Base application theme. -->
    <style name="Theme.ParentalLock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/endColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomPopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">25%</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">@color/black</item>
        <item name="badgeTextColor">@color/startColor</item>
    </style>

    <style name="SlideToActView">
        <item name="text">SlideToActView</item>
        <item name="text_size">@dimen/slidetoact_default_text_size</item>
        <item name="area_margin">@dimen/slidetoact_default_area_margin</item>
        <item name="inner_color">?android:colorBackground</item>
        <item name="outer_color">?colorAccent</item>
        <item name="slider_locked">false</item>
    </style>

</resources>